<UserControl x:Class="Scalpio.Controls.Terminal.Terminal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scalpio.Controls.Terminal" 
             xmlns:common="clr-namespace:Scalpio.Controls.Terminal.Common"
             mc:Ignorable="d" 
             Background="#F2F2F2"
             d:DesignHeight="1024" d:DesignWidth="1376">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="186"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="White"/>
        <Grid Grid.Row="3" Margin="0,0,0,4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <common:TradingFrame />
        </Grid>
    </Grid>
</UserControl>
